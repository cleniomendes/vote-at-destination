<div class="container">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title"><span class="fa fa-line-chart"></span>Please, choose the better destination</h3>
            </div>
            <div class="panel-body">
                <ul class="list-group">
                    <% @destinations.each do |destination| %>
                        <li class="list-group-item">
                            <div class="radio">
                                <label>
                                    <input type="radio" value=""> <%= destination.name %>
                                </label>
                            </div>
                        </li>
                    <% end %>
                </ul>
            </div>
            <div class="panel-footer text-center">
                <button type="button" class="btn btn-primary btn-block btn-sm">
                    Vote</button>
            </div>
        </div>
    </div>
</div>