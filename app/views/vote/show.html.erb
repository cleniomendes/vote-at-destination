<div class="container">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title"><span class="fa fa-line-chart"></span>All Results</h3>
            </div>
            <div id="result" class="panel-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Destination</th>
                            <th>Total</th>
                        </tr>
                     </thead>
                     <tbody>
                        <% @all_votes.each do |a| %>
                            <tr>
                              <td><%= a.name %></td> 
                              <td><%= a.total %></td>
                            </tr>
                        <% end %>
                     </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


